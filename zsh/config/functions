#!/bin/bash
# ls
alias ll='ls -lh'
alias la='ls -A'
alias l='ls -CF'

# ipython: awesome python interpreter
python() {
    if [ $# -eq 0 ]; then
        ipython
    else
        command python $@
    fi
}
alias uu='pkg u'

# tools
alias up='cd ..'
alias home='cd ~'
alias www='lynx'
alias lsgroup='cat /etc/group'
alias lsuser='cat /etc/passwd'
alias tracerout='tracepath'
alias spell='aspell -a <<< '
alias webshare='python -c "import SimpleHTTPServer; SimpleHTTPServer.test();"'
alias vim='vim -p'
alias vi='vi -p'
alias bc='bc -l'
alias rless='command less'
alias less='/usr/share/vim/vim72/macros/less.sh'
alias srm='srm -Dv'
alias quit='exit'
alias :q='exit'

alias p="pgrep -lf"
calc(){ awk "BEGIN{ print $* }" ;}
service() {
    serv=$1
    shift 1
    [ -x /etc/rc.d/$serv ] && sudo /etc/rc.d/$serv $@ || echo "Service \"$serv\" does not exist" >&2
}

extract() {
  local e=0 i c
  for i; do
    if [[ -f $i && -r $i ]]; then
        c=''
        case $i in
          *.t@(gz|lz|xz|b@(2|z?(2))|a@(z|r?(.@(Z|bz?(2)|gz|lzma|xz)))))
                 c='bsdtar xvf' ;;
          *.7z)  c='7z x'       ;;
          *.Z)   c='uncompress' ;;
          *.bz2) c='bunzip2'    ;;
          *.exe) c='cabextract' ;;
          *.gz)  c='gunzip'     ;;
          *.rar) c='unrar x'    ;;
          *.xz)  c='unxz'       ;;
          *.zip) c='unzip'      ;;
          *)     echo "$0: cannot extract \`$i': Unrecognized file extension" >&2; e=1 ;;
        esac
        [ $c ] && command $c "$i"
    else
        echo "$0: cannot extract \`$i': File is unreadable" >&2; e=2
    fi
  done
  return $e
}

ranger() {
    command ranger --fail-unless-cd $@ &&
    cd "$(grep \^\' ~/.ranger/bookmarks | cut -b3-)"
}
